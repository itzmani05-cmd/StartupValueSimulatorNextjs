  box-shadow: var(--shadow-lg);
  border-color: var(--primary-color);
}

.card-icon {
  font-size: var(--font-size-3xl);
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--primary-light);
  border-radius: var(--radius-lg);
  color: var(--primary-color);
}

.card-content {
  flex: 1;
}

.card-content h3 {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-2);
  font-weight: 500;
}

.card-value {
  font-size: var(--font-size-2xl);
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: var(--spacing-1);
}

.card-subtitle {
  font-size: var(--font-size-sm);
  color: var(--text-muted);
}

/* Valuation Section */
.valuation-section {
  background: var(--white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-6);
  margin-bottom: var(--spacing-8);
  box-shadow: var(--shadow-md);
}

.section-header {
  margin-bottom: var(--spacing-4);
}

.section-header h3 {
  font-size: var(--font-size-xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-2);
}

.section-header p {
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
}

.valuation-input label {
  display: block;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: var(--spacing-2);
}

.input-group {
  display: flex;
  align-items: center;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  overflow: hidden;
  transition: border-color var(--transition-fast);
}

.input-group:focus-within {
  border-color: var(--primary-color);
}

.input-prefix {
  background: var(--gray-100);
  padding: var(--spacing-3);
  color: var(--text-secondary);
  font-weight: 500;
  border-right: 1px solid var(--border-color);
}

.input-group input {
  flex: 1;
  border: none;
  padding: var(--spacing-3);
  font-size: var(--font-size-lg);
  outline: none;
}

/* Controls Section */
.controls-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-6);
  gap: var(--spacing-4);
  flex-wrap: wrap;
}

.controls-left {
  display: flex;
  gap: var(--spacing-3);
}

.controls-right {
  display: flex;
  gap: var(--spacing-3);
  align-items: center;
  flex-wrap: wrap;
}

.add-round-btn {
  background: var(--primary-color);
  color: var(--white);
  border: none;
  padding: var(--spacing-3) var(--spacing-4);
  border-radius: var(--radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-fast);
}

.add-round-btn:hover {
  background: var(--primary-dark);
  transform: translateY(-1px);
}

.search-input,
.filter-select,
.sort-select {
  padding: var(--spacing-2) var(--spacing-3);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  font-size: var(--font-size-sm);
}

.sort-order-btn {
  background: var(--gray-100);
  border: 1px solid var(--border-color);
  padding: var(--spacing-2) var(--spacing-3);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.sort-order-btn:hover {
  background: var(--gray-200);
}

/* Rounds List */
.rounds-list {
  margin-bottom: var(--spacing-8);
}

.empty-state {
  text-align: center;
  padding: var(--spacing-12);
  background: var(--white);
  border-radius: var(--radius-lg);
  border: 2px dashed var(--border-color);
}

.empty-icon {
  font-size: var(--font-size-4xl);
  margin-bottom: var(--spacing-4);
}

.empty-state h3 {
  font-size: var(--font-size-2xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-2);
}

.empty-state p {
  color: var(--text-secondary);
  margin-bottom: var(--spacing-4);
}

.empty-action-btn {
  background: var(--primary-color);
  color: var(--white);
  border: none;
  padding: var(--spacing-3) var(--spacing-6);
  border-radius: var(--radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-fast);
}

.empty-action-btn:hover {
  background: var(--primary-dark);
  transform: translateY(-1px);
}

.rounds-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: var(--spacing-6);
}

.round-card {
  background: var(--white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  transition: all var(--transition-normal);
}

.round-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-color);
}

.round-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-4);
  background: var(--gray-50);
  border-bottom: 1px solid var(--border-color);
}

.round-type-badge {
  padding: var(--spacing-1) var(--spacing-3);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.round-type-safe {
  background: var(--success-light);
  color: var(--success-color);
}

.round-type-priced-round {
  background: var(--primary-light);
  color: var(--primary-color);
}

.round-actions {
  display: flex;
  gap: var(--spacing-2);
}

.action-btn {
  background: var(--gray-100);
  border: 1px solid var(--border-color);
  padding: var(--spacing-2);
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: all var(--transition-fast);
  font-size: var(--font-size-sm);
}

.action-btn:hover {
  background: var(--gray-200);
  transform: translateY(-1px);
}

.action-btn.edit:hover {
  background: var(--primary-light);
  border-color: var(--primary-color);
}

.action-btn.delete:hover {
  background: var(--danger-light);
  border-color: var(--danger-color);
}

.round-content {
  padding: var(--spacing-4);
}

.round-name {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-2);
}

.round-date {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-4);
}

.round-metrics {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: var(--spacing-3);
  margin-bottom: var(--spacing-4);
}

.metric {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-1);
}

.metric-label {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
  font-weight: 500;
}

.metric-value {
  font-size: var(--font-size-sm);
  color: var(--text-primary);
  font-weight: 600;
}

.safe-details,
.priced-details {
  background: var(--gray-50);
  padding: var(--spacing-3);
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-4);
}

.safe-metric,
.priced-metric {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-2);
}

.safe-metric:last-child,
.priced-metric:last-child {
  margin-bottom: 0;
}

.round-investors {
  margin-bottom: var(--spacing-4);
}

.investors-label {
  display: block;
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
  font-weight: 500;
  margin-bottom: var(--spacing-2);
}

.investors-list {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-2);
}

.investor-tag {
  background: var(--primary-light);
  color: var(--primary-color);
  padding: var(--spacing-1) var(--spacing-2);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  font-weight: 500;
}

.round-notes {
  background: var(--gray-50);
  padding: var(--spacing-3);
  border-radius: var(--radius-md);
}

.notes-label {
  display: block;
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
  font-weight: 500;
  margin-bottom: var(--spacing-2);
}

.round-notes p {
  font-size: var(--font-size-sm);
  color: var(--text-primary);
  margin: 0;
  line-height: 1.4;
}

/* Save Section */
.save-section {
  text-align: center;
  padding: var(--spacing-6);
  background: var(--white);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-color);
  box-shadow: var(--shadow-md);
}

/* Round Modal */
.round-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: var(--white);
  border-radius: var(--radius-lg);
  max-width: 800px;
  width: 90%;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: var(--shadow-xl);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-6);
  border-bottom: 1px solid var(--border-color);
}

.modal-header h3 {
  font-size: var(--font-size-2xl);
  color: var(--text-primary);
  margin: 0;
}

.close-btn {
  background: var(--gray-100);
  border: 1px solid var(--border-color);
  padding: var(--spacing-2);
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: all var(--transition-fast);
  font-size: var(--font-size-lg);
}

.close-btn:hover {
  background: var(--gray-200);
}

.validation-errors {
  padding: var(--spacing-4) var(--spacing-6);
  background: var(--danger-light);
  border-bottom: 1px solid var(--danger-color);
}

.error-message {
  color: var(--danger-color);
  font-size: var(--font-size-sm);
  margin-bottom: var(--spacing-1);
}

.error-message:last-child {
  margin-bottom: 0;
}

.round-form {
  padding: var(--spacing-6);
}

.form-row {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-4);
  margin-bottom: var(--spacing-4);
}

/* ========================================
   PROFESSIONAL FORM SYSTEM
   ======================================== */

.form-group {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-2);
  margin-bottom: var(--spacing-4);
}

.form-group.full-width {
  grid-column: 1 / -1;
}

.form-group label {
  font-family: var(--font-family);
  font-weight: var(--font-weight-semibold);
  font-size: var(--font-size-sm);
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  margin-bottom: var(--spacing-1);
}

.form-group label .required {
  color: var(--error-color);
  font-weight: var(--font-weight-bold);
}

.form-group input,
.form-group select,
.form-group textarea {
  padding: var(--spacing-3) var(--spacing-4);
  border: 2px solid var(--border-color);
  border-radius: var(--radius-lg);
  font-family: var(--font-family);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-normal);
  line-height: var(--line-height-normal);
  color: var(--text-primary);
  background: var(--white);
  transition: var(--transition-fast);
  min-height: 44px;
  outline: none;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  border-color: var(--primary-600);
  box-shadow: 0 0 0 var(--ring-width) var(--primary-200);
  background: var(--white);
  transform: translateY(-1px);
}

.form-group input:hover:not(:focus),
.form-group select:hover:not(:focus),
.form-group textarea:hover:not(:focus) {
  border-color: var(--gray-400);
}

.form-group input[type="number"]::-webkit-outer-spin-button,
.form-group input[type="number"]::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.form-group input[type="number"] {
  -moz-appearance: textfield;
}

.form-group input::placeholder,
.form-group textarea::placeholder {
  color: var(--text-muted);
  font-weight: var(--font-weight-normal);
}

.form-group select {
  cursor: pointer;
  appearance: none;
  background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="%236B7280"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>');
  background-repeat: no-repeat;
  background-position: right var(--spacing-3) center;
  background-size: 16px;
  padding-right: var(--spacing-10);
}

.form-group textarea {
  resize: vertical;
  min-height: 120px;
  font-family: inherit;
}

.form-section {
  background: var(--surface-secondary);
  border: 1px solid var(--border-light);
  border-radius: var(--radius-xl);
  padding: var(--spacing-8);
  margin-bottom: var(--spacing-8);
  box-shadow: var(--shadow-sm);
}

.form-section h3 {
  font-family: var(--font-display);
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin: 0 0 var(--spacing-6) 0;
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
}

.form-section h3::before {
  content: '';
  width: 4px;
  height: 24px;
  background: linear-gradient(135deg, var(--primary-600), var(--primary-700));
  border-radius: var(--radius-sm);
  flex-shrink: 0;
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: var(--spacing-6);
  margin-bottom: var(--spacing-6);
}

.form-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-4);
  margin-bottom: var(--spacing-4);
}

.form-actions {
  display: flex;
  gap: var(--spacing-4);
  justify-content: flex-end;
  padding-top: var(--spacing-6);
  border-top: 1px solid var(--border-color);
  margin-top: var(--spacing-6);
  flex-wrap: wrap;
}

.form-error {
  color: var(--error-color);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  margin-top: var(--spacing-1);
  display: flex;
  align-items: center;
  gap: var(--spacing-1);
}

.form-error::before {
  content: '';
  font-size: var(--font-size-xs);
}

.form-help {
  color: var(--text-muted);
  font-size: var(--font-size-sm);
  margin-top: var(--spacing-1);
  line-height: var(--line-height-relaxed);
}

.investors-input {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-2);
}

.investor-input-row {
  display: flex;
  gap: var(--spacing-2);
  align-items: center;
}

.investor-input-row input {
  flex: 1;
}

.remove-investor-btn {
  background: var(--danger-light);
  color: var(--danger-color);
  border: 1px solid var(--danger-color);
  padding: var(--spacing-2);
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: all var(--transition-fast);
  font-size: var(--font-size-sm);
}

.remove-investor-btn:hover {
  background: var(--danger-color);
  color: var(--white);
}

.add-investor-btn {
  background: var(--success-light);
  color: var(--success-color);
  border: 1px solid var(--success-color);
  padding: var(--spacing-2) var(--spacing-3);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-fast);
  font-size: var(--font-size-sm);
  align-self: flex-start;
}

.add-investor-btn:hover {
  background: var(--success-color);
  color: var(--white);
}

.modal-actions {
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-3);
  padding: var(--spacing-6);
  border-top: 1px solid var(--border-color);
}

.cancel-btn {
  background: var(--gray-100);
  color: var(--text-primary);
  border: 1px solid var(--border-color);
  padding: var(--spacing-3) var(--spacing-4);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.cancel-btn:hover {
  background: var(--gray-200);
}

.save-btn {
  background: var(--primary-color);
  color: var(--white);
  border: none;
  padding: var(--spacing-3) var(--spacing-4);
  border-radius: var(--radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-fast);
}

.save-btn:hover:not(:disabled) {
  background: var(--primary-dark);
}

.save-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* Responsive Design */
@media (max-width: 768px) {
  .summary-cards {
    grid-template-columns: 1fr;
  }
  
  .controls-section {
    flex-direction: column;
    align-items: stretch;
  }
  
  .controls-right {
    justify-content: center;
  }
  
  .rounds-grid {
    grid-template-columns: 1fr;
  }
  
  .form-row {
    grid-template-columns: 1fr;
  }
  
  .round-metrics {
    grid-template-columns: 1fr;
  }
  
  .modal-content {
    width: 95%;
    margin: var(--spacing-4);
  }
  
  .modal-header {
    padding: var(--spacing-4);
  }
  
  .round-form {
    padding: var(--spacing-4);
  }
  
  .modal-actions {
    padding: var(--spacing-4);
  }
}

/* Enhanced Results Display Styles */
.results-display {
  padding: var(--spacing-6);
  max-width: 1400px;
  margin: 0 auto;
}

.results-header {
  text-align: center;
  margin-bottom: var(--spacing-8);
}

.results-header h2 {
  font-size: var(--font-size-3xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-2);
}

.results-header p {
  font-size: var(--font-size-lg);
  color: var(--text-secondary);
}

.empty-results {
  text-align: center;
  padding: var(--spacing-12);
  background: var(--white);
  border-radius: var(--radius-lg);
  border: 2px dashed var(--border-color);
}

.empty-icon {
  font-size: var(--font-size-4xl);
  margin-bottom: var(--spacing-4);
}

.empty-results h3 {
  font-size: var(--font-size-2xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-2);
}

.empty-results p {
  color: var(--text-secondary);
}

/* Metrics Summary */
.metrics-summary {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: var(--spacing-6);
  margin-bottom: var(--spacing-8);
}

.metric-card {
  background: var(--white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-6);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-normal);
  display: flex;
  align-items: center;
  gap: var(--spacing-4);
}

.metric-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.metric-card.primary {
  border-left: 4px solid var(--primary-color);
}

.metric-card.success {
  border-left: 4px solid var(--success-color);
}

.metric-card.warning {
  border-left: 4px solid var(--warning-color);
}

.metric-card.info {
  border-left: 4px solid var(--info-color);
}

.metric-icon {
  font-size: var(--font-size-3xl);
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-lg);
}

.metric-card.primary .metric-icon {
  background: var(--primary-light);
  color: var(--primary-color);
}

.metric-card.success .metric-icon {
  background: var(--success-light);
  color: var(--success-color);
}

.metric-card.warning .metric-icon {
  background: var(--warning-light);
  color: var(--warning-color);
}

.metric-card.info .metric-icon {
  background: var(--info-light);
  color: var(--info-color);
}

.metric-content {
  flex: 1;
}

.metric-content h3 {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-2);
  font-weight: 500;
}

.metric-value {
  font-size: var(--font-size-2xl);
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-1);
}

.metric-subtitle {
  font-size: var(--font-size-sm);
  color: var(--text-muted);
}

/* Analysis Sections */
.analysis-section {
  background: var(--white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-6);
  margin-bottom: var(--spacing-8);
  box-shadow: var(--shadow-md);
}

.section-header {
  margin-bottom: var(--spacing-6);
  text-align: center;
}

.section-header h3 {
  font-size: var(--font-size-2xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-2);
}

.section-header p {
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
}

/* Ownership Analysis */
.ownership-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--spacing-6);
}

.ownership-card {
  background: var(--gray-50);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-4);
}

.ownership-card h4 {
  font-size: var(--font-size-lg);
  color: var(--text-primary);
  margin-bottom: var(--spacing-4);
  text-align: center;
}

.ownership-stats {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-3);
}

.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-2);
  background: var(--white);
  border-radius: var(--radius-sm);
  border: 1px solid var(--border-color);
}

.stat-label {
  font-weight: 500;
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
}

.stat-value {
  font-weight: 600;
  color: var(--primary-color);
  font-size: var(--font-size-sm);
}

/* Founder Payouts */
.founder-payouts {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-4);
}

.founder-payout-card {
  background: var(--gray-50);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-4);
  transition: all var(--transition-normal);
}

.founder-payout-card:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.founder-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-4);
}

.founder-info h4 {
  font-size: var(--font-size-lg);
  color: var(--text-primary);
  margin-bottom: var(--spacing-1);
}

.founder-role {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  background: var(--white);
  padding: var(--spacing-1) var(--spacing-2);
  border-radius: var(--radius-sm);
  border: 1px solid var(--border-color);
}

.founder-rank {
  background: var(--primary-color);
  color: var(--white);
  width: 30px;
  height: 30px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: var(--font-size-sm);
}

.metric-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-3);
}

.metric-item {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-1);
  padding: var(--spacing-3);
  background: var(--white);
  border-radius: var(--radius-sm);
  border: 1px solid var(--border-color);
}

.metric-item.highlight {
  background: var(--primary-light);
  border-color: var(--primary-color);
}

.metric-label {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
  font-weight: 500;
}

.metric-value {
  font-size: var(--font-size-sm);
  color: var(--text-primary);
  font-weight: 600;
}

.metric-item.highlight .metric-value {
  color: var(--primary-color);
}

/* Cap Table */
.cap-table-container {
  overflow-x: auto;
  border-radius: var(--radius-md);
  border: 1px solid var(--border-color);
}

.cap-table {
  width: 100%;
  border-collapse: collapse;
  background: var(--white);
}

.cap-table th {
  background: var(--gray-50);
  padding: var(--spacing-4);
  text-align: left;
  font-weight: 600;
  color: var(--text-primary);
  border-bottom: 1px solid var(--border-color);
  font-size: var(--font-size-sm);
}

.cap-table td {
  padding: var(--spacing-4);
  border-bottom: 1px solid var(--border-color);
  vertical-align: middle;
}

.stakeholder-row.founder {
  background: var(--success-light);
}

.stakeholder-row.esop {
  background: var(--warning-light);
}

.stakeholder-name {
  font-weight: 500;
  color: var(--text-primary);
}

.stakeholder-type {
  text-align: center;
}

.type-badge {
  padding: var(--spacing-1) var(--spacing-2);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  font-weight: 500;
  text-transform: uppercase;
}

.type-founder {
  background: var(--success-light);
  color: var(--success-color);
}

.type-esop {
  background: var(--warning-light);
  color: var(--warning-color);
}

.stakeholder-shares,
.stakeholder-percentage,
.stakeholder-value {
  text-align: center;
  font-weight: 500;
}

.stakeholder-value {
  color: var(--primary-color);
}

/* Dilution Analysis */
.dilution-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--spacing-6);
}

.dilution-card {
  background: var(--gray-50);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-6);
  text-align: center;
  transition: all var(--transition-normal);
}

.dilution-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.dilution-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-4);
}

.dilution-header h4 {
  font-size: var(--font-size-lg);
  color: var(--text-primary);
  margin: 0;
}

.dilution-icon {
  font-size: var(--font-size-2xl);
}

.dilution-value {
  font-size: var(--font-size-3xl);
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: var(--spacing-3);
}

.dilution-description {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: 1.4;
}

/* Funding Impact */
.funding-impact {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-4);
}

.round-impact-card {
  background: var(--gray-50);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-4);
  transition: all var(--transition-normal);
}

.round-impact-card:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.round-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-4);
}

.round-header h4 {
  font-size: var(--font-size-lg);
  color: var(--text-primary);
  margin: 0;
}

.round-type-badge.type-safe {
  background: var(--success-light);
  color: var(--success-color);
}

.round-type-badge.type-priced-round {
  background: var(--primary-light);
  color: var(--primary-color);
}

.round-details {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-3);
  margin-bottom: var(--spacing-4);
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-2);
  background: var(--white);
  border-radius: var(--radius-sm);
  border: 1px solid var(--border-color);
}

.detail-row.highlight {
  background: var(--primary-light);
  border-color: var(--primary-color);
}

.detail-label {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  font-weight: 500;
}

.detail-value {
  font-size: var(--font-size-sm);
  color: var(--text-primary);
  font-weight: 600;
}

.detail-row.highlight .detail-value {
  color: var(--primary-color);
}

.safe-details,
.priced-details {
  background: var(--white);
  padding: var(--spacing-3);
  border-radius: var(--radius-sm);
  border: 1px solid var(--border-color);
}

.safe-metric,
.priced-metric {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-2);
}

.safe-metric:last-child,
.priced-metric:last-child {
  margin-bottom: 0;
}

/* Summary Section */
.summary-section {
  background: var(--white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-6);
  box-shadow: var(--shadow-md);
}

.summary-header {
  text-align: center;
  margin-bottom: var(--spacing-6);
}

.summary-header h3 {
  font-size: var(--font-size-2xl);
  color: var(--text-primary);
  margin: 0;
}

.summary-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--spacing-4);
}

.summary-stat {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-3);
  background: var(--gray-50);
  border-radius: var(--radius-md);
  border: 1px solid var(--border-color);
}

.summary-stat.highlight {
  background: var(--primary-light);
  border-color: var(--primary-color);
}

.stat-label {
  font-weight: 500;
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
}

.stat-value {
  font-weight: 600;
  color: var(--primary-color);
  font-size: var(--font-size-sm);
}

.summary-stat.highlight .stat-value {
  color: var(--primary-color);
}

/* Responsive Design */
@media (max-width: 768px) {
  .metrics-summary {
    grid-template-columns: 1fr;
  }
  
  .ownership-grid {
    grid-template-columns: 1fr;
  }
  
  .dilution-grid {
    grid-template-columns: 1fr;
  }
  
  .metric-grid {
    grid-template-columns: 1fr;
  }
  
  .round-details {
    grid-template-columns: 1fr;
  }
  
  .summary-stats {
    grid-template-columns: 1fr;
  }
  
  .cap-table {
    font-size: var(--font-size-sm);
  }
  
  .cap-table th,
  .cap-table td {
    padding: var(--spacing-2);
  }
}

/* Waterfall Chart Styles */
.waterfall-card {
  grid-column: span 2;
}

.waterfall-chart-container h3 {
  text-align: center;
  margin-bottom: var(--spacing-4);
  color: var(--text-primary);
}

.waterfall-legend {
  display: flex;
  justify-content: center;
  gap: var(--spacing-4);
  margin-top: var(--spacing-4);
  flex-wrap: wrap;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.legend-color {
  width: 16px;
  height: 16px;
  border-radius: 2px;
  border: 1px solid var(--border-color);
}

/* Custom Tooltip Styles */
.custom-tooltip {
  background: var(--white) !important;
  border: 1px solid var(--border-color) !important;
  border-radius: var(--radius-md) !important;
  padding: var(--spacing-3) !important;
  box-shadow: var(--shadow-md) !important;
}

.custom-tooltip .label {
  font-weight: 600;
  margin-bottom: var(--spacing-2);
  color: var(--text-primary);
}

.custom-tooltip .value {
  color: var(--primary-color);
  font-weight: 500;
  margin-bottom: var(--spacing-1);
}

.custom-tooltip .capital {
  color: var(--success-color);
  font-weight: 500;
  margin-bottom: var(--spacing-1);
}

.custom-tooltip .type {
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
  text-transform: capitalize;
}

/* Enhanced Scenarios Management Styles */
.scenarios-container {
  padding: var(--spacing-6);
  max-width: 1400px;
  margin: 0 auto;
}

.scenarios-header {
  text-align: center;
  margin-bottom: var(--spacing-8);
}

.scenarios-header h2 {
  font-size: var(--font-size-3xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-2);
}

.scenarios-header p {
  font-size: var(--font-size-lg);
  color: var(--text-secondary);
}

/* Empty States */
.empty-state {
  text-align: center;
  padding: var(--spacing-12);
  background: var(--white);
  border-radius: var(--radius-lg);
  border: 2px dashed var(--border-color);
}

.empty-icon {
  font-size: var(--font-size-4xl);
  margin-bottom: var(--spacing-4);
}

.empty-state h3 {
  font-size: var(--font-size-2xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-2);
}

.empty-state p {
  color: var(--text-secondary);
  margin-bottom: var(--spacing-4);
}

.empty-action-btn {
  background: var(--primary-color);
  color: var(--white);
  border: none;
  padding: var(--spacing-3) var(--spacing-6);
  border-radius: var(--radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-normal);
}

.empty-action-btn:hover {
  background: var(--primary-dark);
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

/* Actions Bar */
.scenarios-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-6);
  padding: var(--spacing-4);
  background: var(--white);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-color);
  box-shadow: var(--shadow-sm);
}

.actions-left {
  display: flex;
  gap: var(--spacing-3);
  align-items: center;
  flex-wrap: wrap;
}

.actions-right {
  display: flex;
  gap: var(--spacing-2);
  align-items: center;
}

.save-current-btn {
  background: var(--primary-color);
  color: var(--white);
  border: none;
  padding: var(--spacing-3) var(--spacing-6);
  border-radius: var(--radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-normal);
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

.save-current-btn:hover {
  background: var(--primary-dark);
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.bulk-action-btn {
  border: none;
  padding: var(--spacing-2) var(--spacing-4);
  border-radius: var(--radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-normal);
  font-size: var(--font-size-sm);
}

.bulk-action-btn.warning {
  background: var(--warning-light);
  color: var(--warning-color);
  border: 1px solid var(--warning-color);
}

.bulk-action-btn.warning:hover {
  background: var(--warning-color);
  color: var(--white);
}

.bulk-action-btn.info {
  background: var(--info-light);
  color: var(--info-color);
  border: 1px solid var(--info-color);
}

.bulk-action-btn.info:hover {
  background: var(--info-color);
  color: var(--white);
}

.bulk-action-btn.success {
  background: var(--success-light);
  color: var(--success-color);
  border: 1px solid var(--success-color);
}

.bulk-action-btn.success:hover {
  background: var(--success-color);
  color: var(--white);
}

.view-mode-btn {
  background: var(--white);
  color: var(--text-secondary);
  border: 1px solid var(--border-color);
  padding: var(--spacing-2);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-normal);
  font-size: var(--font-size-lg);
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-mode-btn:hover {
  background: var(--gray-50);
  border-color: var(--primary-color);
}

.view-mode-btn.active {
  background: var(--primary-color);
  color: var(--white);
  border-color: var(--primary-color);
}

/* Search and Filters */
.scenarios-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-6);
  padding: var(--spacing-4);
  background: var(--white);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-color);
  box-shadow: var(--shadow-sm);
  gap: var(--spacing-4);
  flex-wrap: wrap;
}

.search-section {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
  flex: 1;
  min-width: 250px;
}

.search-input {
  flex: 1;
  padding: var(--spacing-3);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  font-size: var(--font-size-sm);
  transition: all var(--transition-normal);
}

.search-input:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px var(--primary-light);
}

.search-count {
  font-size: var(--font-size-sm);
  color: var(--text-muted);
  white-space: nowrap;
}

.filters-section {
  display: flex;
  gap: var(--spacing-2);
  align-items: center;
}

.filter-select,
.sort-select {
  padding: var(--spacing-2) var(--spacing-3);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  background: var(--white);
  font-size: var(--font-size-sm);
  cursor: pointer;
  transition: all var(--transition-normal);
}

.filter-select:focus,
.sort-select:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px var(--primary-light);
}

.sort-order-btn {
  background: var(--white);
  color: var(--text-secondary);
  border: 1px solid var(--border-color);
  padding: var(--spacing-2);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-normal);
  font-size: var(--font-size-lg);
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sort-order-btn:hover {
  background: var(--gray-50);
  border-color: var(--primary-color);
  color: var(--primary-color);
}

/* Scenarios Display */
.scenarios-display {
  margin-bottom: var(--spacing-8);
}

.scenarios-display.grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
  gap: var(--spacing-6);
}

.scenarios-display.list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-4);
}

.scenario-card {
  background: var(--white);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-6);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-normal);
  position: relative;
  overflow: hidden;
}

.scenario-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-color);
}

.scenario-card.favorite {
  border-left: 4px solid var(--warning-color);
}

.scenario-selection {
  position: absolute;
  top: var(--spacing-3);
  left: var(--spacing-3);
  z-index: 2;
}

.scenario-checkbox {
  width: 18px;
  height: 18px;
  accent-color: var(--primary-color);
  cursor: pointer;
}

.scenario-favorite {
  position: absolute;
  top: var(--spacing-3);
  right: var(--spacing-3);
  z-index: 2;
}

.favorite-star {
  font-size: var(--font-size-lg);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.favorite-star.active {
  color: var(--warning-color);
}

.favorite-star:not(.active) {
  color: var(--text-muted);
}

.favorite-star:hover {
  transform: scale(1.1);
}

/* Scenario Content */
.scenario-header {
  margin-top: var(--spacing-4);
  margin-bottom: var(--spacing-4);
}

.scenario-name {
  font-size: var(--font-size-xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-2);
  font-weight: 600;
}

.scenario-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--spacing-2);
}

.scenario-version {
  background: var(--primary-light);
  color: var(--primary-color);
  padding: var(--spacing-1) var(--spacing-2);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  font-weight: 500;
}

.scenario-date {
  font-size: var(--font-size-sm);
  color: var(--text-muted);
}

.scenario-description {
  margin-bottom: var(--spacing-4);
}

.scenario-description p {
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
  line-height: 1.4;
}

.scenario-tags {
  display: flex;
  gap: var(--spacing-2);
  margin-bottom: var(--spacing-4);
  flex-wrap: wrap;
}

.scenario-tag {
  background: var(--gray-100);
  color: var(--text-secondary);
  padding: var(--spacing-1) var(--spacing-2);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  font-weight: 500;
}

.scenario-metrics {
  background: var(--gray-50);
  padding: var(--spacing-4);
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-4);
  border: 1px solid var(--border-color);
}

.metric-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-2);
  padding: var(--spacing-1);
}

.metric-row:last-child {
  margin-bottom: 0;
}

.metric-row.highlight {
  background: var(--primary-light);
  padding: var(--spacing-2);
  border-radius: var(--radius-sm);
  border: 1px solid var(--primary-color);
}

.metric-label {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  font-weight: 500;
}

.metric-value {
  font-size: var(--font-size-sm);
  color: var(--text-primary);
  font-weight: 600;
}

.metric-row.highlight .metric-value {
  color: var(--primary-color);
}

/* Scenario Actions */
.scenario-actions {
  display: flex;
  gap: var(--spacing-2);
  margin-bottom: var(--spacing-3);
  flex-wrap: wrap;
}

.action-btn {
  border: none;
  padding: var(--spacing-2) var(--spacing-3);
  border-radius: var(--radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-normal);
  font-size: var(--font-size-xs);
  flex: 1;
  min-width: 80px;
}

.action-btn.primary {
  background: var(--primary-light);
  color: var(--primary-color);
  border: 1px solid var(--primary-color);
}

.action-btn.primary:hover {
  background: var(--primary-color);
  color: var(--white);
}

.action-btn.info {
  background: var(--info-light);
  color: var(--info-color);
  border: 1px solid var(--info-color);
}

.action-btn.info:hover {
  background: var(--info-color);
  color: var(--white);
}

.action-btn.success {
  background: var(--success-light);
  color: var(--success-color);
  border: 1px solid var(--success-color);
}

.action-btn.success:hover {
  background: var(--success-color);
  color: var(--white);
}

.action-btn.warning {
  background: var(--warning-light);
  color: var(--warning-color);
  border: 1px solid var(--warning-color);
}

.action-btn.warning:hover {
  background: var(--warning-color);
  color: var(--white);
}

.scenario-creation {
  border-top: 1px solid var(--border-color);
  padding-top: var(--spacing-2);
}

.scenario-creation small {
  color: var(--text-muted);
  font-size: var(--font-size-xs);
}

/* No Results State */
.no-results {
  text-align: center;
  padding: var(--spacing-12);
  background: var(--white);
  border-radius: var(--radius-lg);
  border: 2px dashed var(--border-color);
}

.no-results-icon {
  font-size: var(--font-size-4xl);
  margin-bottom: var(--spacing-4);
}

.no-results h3 {
  font-size: var(--font-size-2xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-2);
}

.no-results p {
  color: var(--text-secondary);
  margin-bottom: var(--spacing-4);
}

.clear-filters-btn {
  background: var(--primary-color);
  color: var(--white);
  border: none;
  padding: var(--spacing-3) var(--spacing-6);
  border-radius: var(--radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-normal);
}

.clear-filters-btn:hover {
  background: var(--primary-dark);
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

/* Statistics Footer */
.scenarios-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-4);
  background: var(--white);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-color);
  box-shadow: var(--shadow-sm);
}

.footer-stats {
  display: flex;
  gap: var(--spacing-6);
  align-items: center;
  flex-wrap: wrap;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

.stat-label {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  font-weight: 500;
}

.stat-value {
  font-size: var(--font-size-sm);
  color: var(--primary-color);
  font-weight: 600;
}

.footer-actions {
  display: flex;
  gap: var(--spacing-2);
  align-items: center;
}

.footer-btn {
  background: var(--white);
  color: var(--text-secondary);
  border: 1px solid var(--border-color);
  padding: var(--spacing-2) var(--spacing-4);
  border-radius: var(--radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-normal);
  font-size: var(--font-size-sm);
}

.footer-btn:hover:not(:disabled) {
  background: var(--gray-50);
  border-color: var(--primary-color);
  color: var(--primary-color);
}

.footer-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* List View Specific Styles */
.scenarios-display.list .scenario-card {
  display: flex;
  align-items: center;
  gap: var(--spacing-4);
  padding: var(--spacing-4);
}

.scenarios-display.list .scenario-header {
  margin: 0;
  flex: 1;
}

.scenarios-display.list .scenario-name {
  font-size: var(--font-size-lg);
  margin-bottom: var(--spacing-1);
}

.scenarios-display.list .scenario-meta {
  flex-direction: column;
  align-items: flex-start;
  gap: var(--spacing-1);
}

.scenarios-display.list .scenario-description {
  display: none;
}

.scenarios-display.list .scenario-tags {
  margin: 0;
  flex-wrap: nowrap;
  overflow: hidden;
}

.scenarios-display.list .scenario-metrics {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  display: flex;
  gap: var(--spacing-4);
}

.scenarios-display.list .metric-row {
  margin: 0;
  flex-direction: column;
  align-items: center;
  text-align: center;
  min-width: 100px;
}

.scenarios-display.list .scenario-actions {
  margin: 0;
  flex-direction: column;
  gap: var(--spacing-1);
  min-width: 120px;
}

.scenarios-display.list .action-btn {
  min-width: auto;
  font-size: var(--font-size-xs);
  padding: var(--spacing-1) var(--spacing-2);
}

.scenarios-display.list .scenario-creation {
  display: none;
}

/* Responsive Design */
@media (max-width: 768px) {
  .scenarios-container {
    padding: var(--spacing-4);
  }

  .scenarios-actions {
    flex-direction: column;
    gap: var(--spacing-4);
  }

  .actions-left,
  .actions-right {
    width: 100%;
    justify-content: center;
  }

  .scenarios-controls {
    flex-direction: column;
    gap: var(--spacing-4);
  }

  .search-section {
    width: 100%;
    min-width: auto;
  }

  .filters-section {
    width: 100%;
    justify-content: space-between;
  }

  .scenarios-display.grid {
    grid-template-columns: 1fr;
    gap: var(--spacing-4);
  }

  .scenario-card {
    padding: var(--spacing-4);
  }

  .scenario-actions {
    justify-content: space-between;
  }

  .action-btn {
    min-width: 70px;
    font-size: var(--font-size-xs);
    padding: var(--spacing-2);
  }

  .footer-stats {
    flex-direction: column;
    gap: var(--spacing-2);
    align-items: flex-start;
  }

  .scenarios-footer {
    flex-direction: column;
    gap: var(--spacing-4);
  }

  .footer-actions {
    width: 100%;
    justify-content: center;
  }

  .scenarios-display.list .scenario-card {
    flex-direction: column;
    align-items: stretch;
    gap: var(--spacing-3);
  }

  .scenarios-display.list .scenario-metrics {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-2);
  }

  .scenarios-display.list .scenario-actions {
    flex-direction: row;
    flex-wrap: wrap;
  }
}

/* ========================================
   PROFESSIONAL WELCOME SECTION STYLES
   ======================================== */

.welcome-section {
  background: linear-gradient(135deg, #fafafa 0%, #ffffff 100%);
  padding: var(--spacing-20) 0;
  min-height: 70vh;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.welcome-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23f8fafc" fill-opacity="0.4"><circle cx="30" cy="30" r="1.5"/></g></g></svg>') repeat;
  opacity: 0.6;
  z-index: 0;
}

.welcome-container {
  max-width: 900px;
  margin: 0 auto;
  padding: 0 var(--spacing-8);
  text-align: center;
  position: relative;
  z-index: 1;
}

.welcome-content {
  margin-bottom: var(--spacing-12);
}

.welcome-badge {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-2);
  padding: var(--spacing-2) var(--spacing-4);
  background: linear-gradient(135deg, var(--primary-50) 0%, var(--primary-100) 100%);
  color: var(--primary-700);
  border: 1px solid var(--primary-200);
  border-radius: var(--radius-full);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--spacing-6);
  backdrop-filter: blur(8px);
  box-shadow: var(--shadow-sm);
}

.welcome-content h2 {
  font-family: var(--font-display);
  font-size: var(--font-size-5xl);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: var(--spacing-6);
  line-height: var(--line-height-tight);
  background: linear-gradient(135deg, var(--gray-900) 0%, var(--gray-700) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.02em;
}

.welcome-content p {
  font-size: var(--font-size-xl);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-10);
  line-height: var(--line-height-relaxed);
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
  font-weight: var(--font-weight-normal);
}

.welcome-actions {
  display: flex;
  gap: var(--spacing-4);
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: var(--spacing-8);
}

.welcome-button {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-2);
  padding: var(--spacing-4) var(--spacing-8);
  border-radius: var(--radius-xl);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  text-decoration: none;
  cursor: pointer;
  transition: var(--transition-normal);
  border: 2px solid transparent;
  min-width: 200px;
  justify-content: center;
  position: relative;
  overflow: hidden;
  font-family: var(--font-family);
}

.welcome-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 600ms;
}

.welcome-button:hover::before {
  left: 100%;
}

.welcome-button.primary {
  background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-700) 100%);
  color: var(--white);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-600);
}

.welcome-button.primary:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-xl);
  background: linear-gradient(135deg, var(--primary-500) 0%, var(--primary-600) 100%);
}

.welcome-button.primary:active {
  transform: translateY(0);
  box-shadow: var(--shadow-lg);
}

.welcome-button.secondary {
  background: var(--white);
  color: var(--gray-700);
  border-color: var(--gray-300);
  box-shadow: var(--shadow-sm);
}

.welcome-button.secondary:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
  background: var(--gray-50);
  border-color: var(--gray-400);
}

.welcome-button.secondary:active {
  transform: translateY(0);
  box-shadow: var(--shadow-sm);
}

.welcome-button.tertiary {
  background: linear-gradient(135deg, var(--primary-50) 0%, var(--primary-100) 100%);
  color: var(--primary-600);
  border-color: var(--primary-200);
  box-shadow: var(--shadow-sm);
}

.welcome-button.tertiary:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
  background: linear-gradient(135deg, var(--primary-100) 0%, var(--primary-200) 100%);
  border-color: var(--primary-300);
}

.welcome-trust-indicators {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: var(--spacing-6);
  flex-wrap: wrap;
  font-size: var(--font-size-sm);
  color: var(--text-muted);
  margin-top: var(--spacing-8);
}

.trust-indicator {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  padding: var(--spacing-2) var(--spacing-3);
  background: var(--white);
  border: 1px solid var(--gray-200);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-xs);
}

.trust-indicator::before {
  content: '';
  color: var(--success-color);
  font-weight: var(--font-weight-bold);
  font-size: var(--font-size-xs);
  width: 16px;
  height: 16px;
  background: var(--success-color);
  color: var(--white);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.welcome-button.secondary {
  background: var(--white);
  color: var(--primary-color);
  border: 2px solid var(--primary-color);
  box-shadow: var(--shadow-sm);
}

.welcome-button.secondary:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
  background: var(--primary-color);
  color: var(--white);
}

/* ========================================
   FEATURES SECTION STYLES
   ======================================== */

.features-section {
  background: linear-gradient(135deg, var(--gray-50) 0%, var(--white) 100%);
  padding: var(--spacing-12) 0;
  border-bottom: 1px solid var(--border-light);
}

.features-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--spacing-6);
}

.features-header {
  text-align: center;
  margin-bottom: var(--spacing-12);
}

.features-header h2 {
  font-size: var(--font-size-3xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-4);
  font-weight: 700;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.features-header p {
  font-size: var(--font-size-lg);
  color: var(--text-secondary);
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: var(--spacing-6);
  margin-bottom: var(--spacing-12);
}

.feature-card {
  background: var(--white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-6);
  text-align: center;
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-light);
  transition: var(--transition-normal);
  position: relative;
  overflow: hidden;
}

.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary-color), var(--info-color));
  transform: scaleX(0);
  transition: var(--transition-normal);
}

.feature-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-xl);
  border-color: var(--primary-color);
}

.feature-card:hover::before {
  transform: scaleX(1);
}

.feature-icon {
  font-size: var(--font-size-3xl);
  margin-bottom: var(--spacing-4);
  display: inline-block;
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, var(--primary-color), var(--info-color));
  color: var(--white);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto var(--spacing-4);
  box-shadow: var(--shadow-lg);
}

.feature-card h3 {
  font-size: var(--font-size-lg);
  color: var(--text-primary);
  margin-bottom: var(--spacing-3);
  font-weight: 600;
}

.feature-card p {
  color: var(--text-secondary);
  line-height: 1.6;
  font-size: var(--font-size-base);
}

.features-cta {
  text-align: center;
  background: var(--white);
  border-radius: var(--radius-xl);
  padding: var(--spacing-8);
  box-shadow: var(--shadow-lg);
  border: 2px solid var(--border-light);
}

.features-cta h3 {
  font-size: var(--font-size-2xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-3);
  font-weight: 700;
}

.features-cta p {
  color: var(--text-secondary);
  font-size: var(--font-size-lg);
  margin-bottom: var(--spacing-6);
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
}

.cta-button {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: var(--white);
  border: none;
  padding: var(--spacing-4) var(--spacing-8);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-lg);
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition-normal);
  box-shadow: var(--shadow-md);
}

.cta-button:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-xl);
  background: linear-gradient(135deg, var(--primary-hover), var(--primary-dark));
}

/* ========================================
   WHAT-IF ANALYSIS COMPONENT STYLES
   ======================================== */

.what-if-analysis {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  overflow: hidden;
}

.what-if-header {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: var(--white);
  padding: var(--spacing-8);
  text-align: center;
}

.what-if-header h2 {
  font-size: var(--font-size-3xl);
  margin-bottom: var(--spacing-4);
  font-weight: 700;
}

.what-if-header p {
  font-size: var(--font-size-lg);
  opacity: 0.9;
  max-width: 600px;
  margin: 0 auto;
}

.what-if-container {
  padding: var(--spacing-8);
}

/* Interactive Sliders Section */
.sliders-section {
  margin-bottom: var(--spacing-8);
}

.sliders-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-6);
}

.sliders-header h3 {
  font-size: var(--font-size-2xl);
  color: var(--text-primary);
}

.toggle-advanced {
  background: var(--primary-color);
  color: var(--white);
  border: none;
  padding: var(--spacing-3) var(--spacing-6);
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  transition: var(--transition-normal);
}

.toggle-advanced:hover,
.toggle-advanced.active {
  background: var(--primary-hover);
}

.sliders-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--spacing-6);
}

.slider-card {
  background: var(--card-bg);
  border: 2px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-6);
  cursor: pointer;
  transition: var(--transition-normal);
  position: relative;
}

.slider-card:hover,
.slider-card.active {
  border-color: var(--primary-color);
  box-shadow: var(--shadow-lg);
  transform: translateY(-2px);
}

.slider-card.active::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(45deg, var(--primary-color), var(--info-color));
  border-radius: var(--radius-lg);
  z-index: -1;
}

.slider-header {
  display: flex;
  align-items: flex-start;
  gap: var(--spacing-4);
  margin-bottom: var(--spacing-4);
}

.slider-icon {
  font-size: var(--font-size-2xl);
  background: var(--primary-color);
  color: var(--white);
  width: 48px;
  height: 48px;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.slider-info h4 {
  font-size: var(--font-size-lg);
