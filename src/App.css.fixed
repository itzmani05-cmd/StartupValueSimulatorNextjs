  margin: 0;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-4);
  padding-top: var(--spacing-4);
  border-top: 1px solid var(--border-color);
}

.cancel-btn,
.save-btn {
  padding: var(--spacing-3) var(--spacing-6);
  border: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  transition: var(--transition-normal);
}

.cancel-btn {
  background: var(--gray-200);
  color: var(--text-secondary);
}

.cancel-btn:hover {
  background: var(--gray-300);
}

.save-btn {
  background: var(--success-color);
  color: var(--white);
}

.save-btn:hover {
  background: #059669;
}

/* ========================================
   COMMENT SYSTEM STYLES
   ======================================== */

.comment-system {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  overflow: hidden;
}

.comment-header {
  background: linear-gradient(135deg, var(--info-color), #2563eb);
  color: var(--white);
  padding: var(--spacing-6);
  text-align: center;
}

.comment-header h3 {
  font-size: var(--font-size-2xl);
  margin-bottom: var(--spacing-2);
  font-weight: 700;
}

.comment-header p {
  font-size: var(--font-size-base);
  opacity: 0.9;
  max-width: 500px;
  margin: 0 auto;
}

/* Comment Controls */
.comment-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-6);
  background: var(--gray-50);
  border-bottom: 1px solid var(--border-color);
  flex-wrap: wrap;
  gap: var(--spacing-4);
}

.controls-left,
.controls-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-4);
  flex-wrap: wrap;
}

.search-input {
  padding: var(--spacing-3);
  border: 2px solid var(--border-color);
  border-radius: var(--radius-md);
  min-width: 250px;
  font-size: var(--font-size-base);
}

.search-input:focus {
  outline: none;
  border-color: var(--info-color);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.filter-select,
.sort-select {
  padding: var(--spacing-3);
  border: 2px solid var(--border-color);
  border-radius: var(--radius-md);
  background: var(--white);
  font-size: var(--font-size-base);
  cursor: pointer;
}

.filter-select:focus,
.sort-select:focus {
  outline: none;
  border-color: var(--info-color);
}

.sort-order-btn {
  background: var(--info-color);
  color: var(--white);
  border: none;
  padding: var(--spacing-3);
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  transition: var(--transition-normal);
}

.sort-order-btn:hover {
  background: #2563eb;
}

.show-resolved {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  font-weight: 500;
  color: var(--text-secondary);
  cursor: pointer;
}

.show-resolved input {
  margin: 0;
}

/* Add Comment Section */
.add-comment-section {
  padding: var(--spacing-6);
  background: var(--gray-50);
  border-bottom: 1px solid var(--border-color);
}

.comment-input-container {
  background: var(--white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-4);
  box-shadow: var(--shadow-sm);
}

.comment-input {
  width: 100%;
  border: 2px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-4);
  font-size: var(--font-size-base);
  resize: vertical;
  min-height: 80px;
  transition: var(--transition-normal);
}

.comment-input:focus {
  outline: none;
  border-color: var(--info-color);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.comment-input-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: var(--spacing-4);
  padding-top: var(--spacing-4);
  border-top: 1px solid var(--border-light);
}

.input-tips {
  display: flex;
  gap: var(--spacing-3);
}

.tip {
  background: var(--gray-100);
  color: var(--text-muted);
  padding: var(--spacing-1) var(--spacing-3);
  border-radius: var(--radius-md);
  font-size: var(--font-size-sm);
  font-family: monospace;
}

.add-comment-btn {
  background: var(--info-color);
  color: var(--white);
  border: none;
  padding: var(--spacing-3) var(--spacing-6);
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  transition: var(--transition-normal);
}

.add-comment-btn:hover:not(:disabled) {
  background: #2563eb;
}

.add-comment-btn:disabled {
  background: var(--gray-300);
  cursor: not-allowed;
}

/* Comments List */
.comments-list {
  padding: var(--spacing-6);
}

.no-comments {
  text-align: center;
  padding: var(--spacing-12);
  color: var(--text-muted);
}

.no-comments-icon {
  font-size: var(--font-size-3xl);
  margin-bottom: var(--spacing-4);
}

.no-comments h4 {
  font-size: var(--font-size-xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-2);
}

.comment-item {
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  padding: var(--spacing-6);
  margin-bottom: var(--spacing-6);
  box-shadow: var(--shadow-sm);
  border-left: 4px solid var(--border-color);
  transition: var(--transition-normal);
}

.comment-item:hover {
  box-shadow: var(--shadow-md);
}

.comment-item.open {
  border-left-color: var(--info-color);
}

.comment-item.in-progress {
  border-left-color: var(--warning-color);
}

.comment-item.resolved {
  border-left-color: var(--success-color);
}

.comment-item.closed {
  border-left-color: var(--gray-400);
}

.comment-header-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-4);
  flex-wrap: wrap;
  gap: var(--spacing-4);
}

.comment-author {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
}

.author-avatar {
  width: 40px;
  height: 40px;
  background: var(--primary-color);
  color: var(--white);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: var(--font-size-lg);
}

.author-info {
  display: flex;
  flex-direction: column;
}

.author-name {
  font-weight: 600;
  color: var(--text-primary);
  font-size: var(--font-size-base);
}

.author-role {
  color: var(--text-muted);
  font-size: var(--font-size-sm);
}

.comment-meta {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

.comment-timestamp {
  color: var(--text-muted);
  font-size: var(--font-size-sm);
}

.edited-badge {
  background: var(--gray-100);
  color: var(--text-muted);
  padding: var(--spacing-1) var(--spacing-2);
  border-radius: var(--radius-md);
  font-size: var(--font-size-xs);
  font-style: italic;
}

.comment-controls {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
  flex-wrap: wrap;
}

.priority-select,
.status-select {
  padding: var(--spacing-2);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  background: var(--white);
  font-size: var(--font-size-sm);
  cursor: pointer;
}

.priority-select.priority-critical {
  border-color: var(--error-color);
  color: var(--error-color);
}

.priority-select.priority-high {
  border-color: var(--warning-color);
  color: var(--warning-color);
}

.priority-select.priority-medium {
  border-color: var(--info-color);
  color: var(--info-color);
}

.priority-select.priority-low {
  border-color: var(--success-color);
  color: var(--success-color);
}

.status-select.status-open {
  border-color: var(--info-color);
  color: var(--info-color);
}

.status-select.status-progress {
  border-color: var(--warning-color);
  color: var(--warning-color);
}

.status-select.status-resolved {
  border-color: var(--success-color);
  color: var(--success-color);
}

.status-select.status-closed {
  border-color: var(--gray-400);
  color: var(--gray-400);
}

.edit-btn,
.delete-btn {
  background: none;
  border: none;
  padding: var(--spacing-2);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: var(--transition-normal);
  font-size: var(--font-size-lg);
}

.edit-btn:hover {
  background: var(--gray-100);
}

.delete-btn:hover {
  background: #fef2f2;
  color: var(--error-color);
}

/* Comment Content */
.comment-content {
  margin-bottom: var(--spacing-4);
}

.comment-content p {
  color: var(--text-primary);
  line-height: 1.6;
  margin: 0;
}

.edit-comment {
  background: var(--gray-50);
  border-radius: var(--radius-md);
  padding: var(--spacing-4);
}

.edit-input {
  width: 100%;
  border: 2px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-3);
  font-size: var(--font-size-base);
  resize: vertical;
  min-height: 60px;
  margin-bottom: var(--spacing-3);
}

.edit-input:focus {
  outline: none;
  border-color: var(--info-color);
}

.edit-actions {
  display: flex;
  gap: var(--spacing-3);
}

.save-edit-btn,
.cancel-edit-btn {
  padding: var(--spacing-2) var(--spacing-4);
  border: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  transition: var(--transition-normal);
}

.save-edit-btn {
  background: var(--success-color);
  color: var(--white);
}

.save-edit-btn:hover {
  background: #059669;
}

.cancel-edit-btn {
  background: var(--gray-200);
  color: var(--text-secondary);
}

.cancel-edit-btn:hover {
  background: var(--gray-300);
}

/* Comment Tags and Mentions */
.comment-tags,
.comment-mentions {
  display: flex;
  gap: var(--spacing-2);
  margin-bottom: var(--spacing-4);
  flex-wrap: wrap;
}

.comment-tag {
  background: var(--primary-color);
  color: var(--white);
  padding: var(--spacing-1) var(--spacing-3);
  border-radius: var(--radius-md);
  font-size: var(--font-size-sm);
  font-weight: 500;
}

.comment-mention {
  background: var(--info-color);
  color: var(--white);
  padding: var(--spacing-1) var(--spacing-3);
  border-radius: var(--radius-md);
  font-size: var(--font-size-sm);
  font-weight: 500;
}

/* Comment Actions */
.comment-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-4);
  margin-bottom: var(--spacing-4);
  padding-bottom: var(--spacing-4);
  border-bottom: 1px solid var(--border-light);
}

.reply-btn {
  background: var(--info-color);
  color: var(--white);
  border: none;
  padding: var(--spacing-2) var(--spacing-4);
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  transition: var(--transition-normal);
}

.reply-btn:hover {
  background: #2563eb;
}

.replies-count {
  color: var(--text-muted);
  font-size: var(--font-size-sm);
}

/* Reply Input */
.reply-input-container {
  background: var(--gray-50);
  border-radius: var(--radius-md);
  padding: var(--spacing-4);
  margin-bottom: var(--spacing-4);
}

.reply-input {
  width: 100%;
  border: 2px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-3);
  font-size: var(--font-size-base);
  resize: vertical;
  min-height: 60px;
  margin-bottom: var(--spacing-3);
}

.reply-input:focus {
  outline: none;
  border-color: var(--info-color);
}

.reply-actions {
  display: flex;
  gap: var(--spacing-3);
}

.add-reply-btn,
.cancel-reply-btn {
  padding: var(--spacing-2) var(--spacing-4);
  border: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 600;
  transition: var(--transition-normal);
}

.add-reply-btn {
  background: var(--success-color);
  color: var(--white);
}

.add-reply-btn:hover {
  background: #059669;
}

.cancel-reply-btn {
  background: var(--gray-200);
  color: var(--text-secondary);
}

.cancel-reply-btn:hover {
  background: var(--gray-300);
}

/* Replies */
.replies-container {
  margin-top: var(--spacing-4);
  padding-left: var(--spacing-6);
  border-left: 2px solid var(--border-light);
}

.reply-item {
  background: var(--gray-50);
  border-radius: var(--radius-md);
  padding: var(--spacing-4);
  margin-bottom: var(--spacing-3);
}

.reply-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-3);
}

.reply-author {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

.reply-author .author-name {
  font-weight: 600;
  color: var(--text-primary);
  font-size: var(--font-size-sm);
}

.reply-author .author-role {
  color: var(--text-muted);
  font-size: var(--font-size-xs);
}

.reply-timestamp {
  color: var(--text-muted);
  font-size: var(--font-size-xs);
}

.reply-content p {
  color: var(--text-primary);
  line-height: 1.5;
  margin: 0;
  font-size: var(--font-size-sm);
}

.reply-tags {
  display: flex;
  gap: var(--spacing-2);
  margin-top: var(--spacing-3);
  flex-wrap: wrap;
}

.reply-tag {
  background: var(--primary-color);
  color: var(--white);
  padding: var(--spacing-1) var(--spacing-2);
  border-radius: var(--radius-md);
  font-size: var(--font-size-xs);
  font-weight: 500;
}

/* Comments Summary */
.comments-summary {
  background: var(--gray-50);
  padding: var(--spacing-6);
  border-top: 1px solid var(--border-color);
}

.summary-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  gap: var(--spacing-4);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-label {
  color: var(--text-muted);
  font-size: var(--font-size-sm);
  margin-bottom: var(--spacing-1);
}

.stat-value {
  font-size: var(--font-size-xl);
  font-weight: 700;
  color: var(--text-primary);
}

/* Responsive Design for New Components */
@media (max-width: 768px) {
  /* Welcome Section */
  .welcome-section {
    padding: var(--spacing-12) 0;
    min-height: 50vh;
  }

  .welcome-content h2 {
    font-size: var(--font-size-3xl);
  }

  .welcome-content p {
    font-size: var(--font-size-lg);
  }

  .welcome-actions {
    flex-direction: column;
    align-items: center;
  }

  .welcome-button {
    min-width: 100%;
    max-width: 300px;
  }

  /* Features Section */
  .features-section {
    padding: var(--spacing-8) 0;
  }

  .features-container {
    padding: 0 var(--spacing-4);
  }

  .features-header h2 {
    font-size: var(--font-size-2xl);
  }

  .features-grid {
    grid-template-columns: 1fr;
    gap: var(--spacing-4);
  }

  .feature-card {
    padding: var(--spacing-4);
  }

  .features-cta {
    padding: var(--spacing-6);
  }

  .cta-button {
    padding: var(--spacing-3) var(--spacing-6);
    font-size: var(--font-size-base);
  }

  /* What-If Analysis */
  .what-if-container {
    padding: var(--spacing-4);
  }

  .sliders-grid {
    grid-template-columns: 1fr;
  }

  .projections-grid {
    grid-template-columns: 1fr;
  }

  .advanced-grid {
    grid-template-columns: 1fr;
  }

  /* Exit Scenario Modeling */
  .exit-scenario-container {
    padding: var(--spacing-4);
  }

  .overview-metrics {
    grid-template-columns: repeat(2, 1fr);
  }

  .scenario-tabs {
    flex-direction: column;
  }

  .scenario-tab {
    min-width: auto;
  }

  .scenario-metrics-grid {
    grid-template-columns: 1fr;
  }

  .form-grid {
    grid-template-columns: 1fr;
  }

  /* Comment System */
  .comment-controls {
    flex-direction: column;
    align-items: stretch;
  }

  .controls-left,
  .controls-right {
    justify-content: center;
  }

  .comment-header-row {
    flex-direction: column;
    align-items: stretch;
  }

  .comment-controls {
    justify-content: center;
  }

  .replies-container {
    padding-left: var(--spacing-3);
  }
}

/* Company Modal Styles */
.company-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: var(--spacing-4);
}

.company-modal {
  background: var(--white);
  border-radius: var(--radius-xl);
  max-width: 800px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: var(--shadow-2xl);
  border: 1px solid var(--border-color);
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-20px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.company-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: var(--spacing-6);
  border-bottom: 1px solid var(--border-color);
  background: linear-gradient(135deg, var(--gray-50), var(--white));
}

.modal-title-section {
  display: flex;
  align-items: center;
  gap: var(--spacing-4);
}

.modal-icon {
  font-size: var(--font-size-3xl);
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: var(--white);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-lg);
}

.modal-title-section h2 {
  font-size: var(--font-size-2xl);
  color: var(--text-primary);
  margin: 0 0 var(--spacing-2) 0;
  font-weight: 700;
}

.modal-title-section p {
  color: var(--text-secondary);
  margin: 0;
  font-size: var(--font-size-base);
}

.modal-close-btn {
  background: var(--gray-100);
  border: 1px solid var(--border-color);
  color: var(--text-secondary);
  width: 40px;
  height: 40px;
  border-radius: var(--radius-full);
  cursor: pointer;
  transition: all var(--transition-fast);
  font-size: var(--font-size-2xl);
  font-weight: 300;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-close-btn:hover {
  background: var(--gray-200);
  color: var(--text-primary);
  transform: scale(1.1);
}

.company-modal-form {
  padding: var(--spacing-6);
}

.form-sections {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-8);
}

.form-section {
  background: var(--gray-50);
  border-radius: var(--radius-lg);
  padding: var(--spacing-6);
  border: 1px solid var(--border-color);
}

.form-section h3 {
  font-size: var(--font-size-xl);
  color: var(--text-primary);
  margin: 0 0 var(--spacing-4) 0;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

.form-section h3::before {
  content: '';
  width: 4px;
  height: 20px;
  background: var(--primary-color);
  border-radius: var(--radius-sm);
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--spacing-4);
  margin-bottom: var(--spacing-4);
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-2);
}

.form-group.full-width {
  grid-column: 1 / -1;
}

.form-group label {
  font-weight: 600;
  color: var(--text-primary);
  font-size: var(--font-size-sm);
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

.required {
  color: var(--error-color);
  font-weight: 700;
}

.form-group input,
.form-group select,
.form-group textarea {
  padding: var(--spacing-3) var(--spacing-4);
  border: 2px solid var(--border-color);
  border-radius: var(--radius-md);
  font-size: var(--font-size-base);
  transition: all var(--transition-fast);
  background: var(--white);
  color: var(--text-primary);
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  transform: translateY(-1px);
}

.form-group input.error,
.form-group select.error,
.form-group textarea.error {
  border-color: var(--error-color);
  box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
}

.form-group textarea {
  resize: vertical;
  min-height: 80px;
  font-family: inherit;
}

.input-with-prefix {
  position: relative;
  display: flex;
  align-items: center;
}

.input-with-prefix input {
  padding-right: 80px;
}

.input-prefix {
  position: absolute;
  right: var(--spacing-3);
  color: var(--text-secondary);
  font-weight: 600;
  font-size: var(--font-size-sm);
  pointer-events: none;
}

.error-message {
  color: var(--error-color);
  font-size: var(--font-size-sm);
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: var(--spacing-1);
}

.error-message::before {
  content: '';
  font-size: var(--font-size-xs);
}

.form-help {
  color: var(--text-muted);
  font-size: var(--font-size-xs);
  font-style: italic;
  margin-top: var(--spacing-1);
}

.company-modal-actions {
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-3);
  padding: var(--spacing-6);
  border-top: 1px solid var(--border-color);
  background: var(--gray-50);
  margin: var(--spacing-6) calc(-1 * var(--spacing-6)) calc(-1 * var(--spacing-6)) calc(-1 * var(--spacing-6));
  border-radius: 0 0 var(--radius-xl) var(--radius-xl);
}

/* ========================================
   PROFESSIONAL BUTTON SYSTEM
   ======================================== */

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-2);
  padding: var(--spacing-3) var(--spacing-6);
  border: 2px solid transparent;
  border-radius: var(--radius-lg);
  font-family: var(--font-family);
  font-weight: var(--font-weight-semibold);
  font-size: var(--font-size-base);
  line-height: var(--line-height-normal);
  cursor: pointer;
  transition: var(--transition-fast);
  text-decoration: none;
  min-height: 44px;
  min-width: 120px;
  position: relative;
  overflow: hidden;
  user-select: none;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 600ms;
}

.btn:hover::before {
  left: 100%;
}

.btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none !important;
  pointer-events: none;
}

.btn:disabled::before {
  display: none;
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-700) 100%);
  color: var(--white);
  border-color: var(--primary-600);
  box-shadow: var(--shadow-md);
}

.btn-primary:hover:not(:disabled) {
  background: linear-gradient(135deg, var(--primary-500) 0%, var(--primary-600) 100%);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-500);
}

.btn-primary:active:not(:disabled) {
  transform: translateY(0);
  box-shadow: var(--shadow-md);
}

.btn-secondary {
  background: var(--white);
  color: var(--text-primary);
  border-color: var(--gray-300);
  box-shadow: var(--shadow-sm);
}

.btn-secondary:hover:not(:disabled) {
  background: var(--gray-50);
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
  border-color: var(--gray-400);
}

.btn-secondary:active:not(:disabled) {
  transform: translateY(0);
  box-shadow: var(--shadow-sm);
}

.btn-outline {
  background: transparent;
  color: var(--primary-600);
  border-color: var(--primary-600);
}

.btn-outline:hover:not(:disabled) {
  background: var(--primary-600);
  color: var(--white);
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.btn-ghost {
  background: transparent;
  color: var(--text-secondary);
  border-color: transparent;
}

.btn-ghost:hover:not(:disabled) {
  background: var(--gray-100);
  color: var(--text-primary);
  transform: translateY(-1px);
}

.btn-success {
  background: linear-gradient(135deg, var(--success-color) 0%, #047857 100%);
  color: var(--white);
  border-color: var(--success-color);
  box-shadow: var(--shadow-md);
}

.btn-success:hover:not(:disabled) {
  background: linear-gradient(135deg, #059669 0%, var(--success-color) 100%);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.btn-danger {
  background: linear-gradient(135deg, var(--error-color) 0%, #b91c1c 100%);
  color: var(--white);
  border-color: var(--error-color);
  box-shadow: var(--shadow-md);
}

.btn-danger:hover:not(:disabled) {
  background: linear-gradient(135deg, #ef4444 0%, var(--error-color) 100%);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

/* Button Sizes */
.btn-sm {
  padding: var(--spacing-2) var(--spacing-4);
  font-size: var(--font-size-sm);
  min-height: 36px;
  min-width: 80px;
}

.btn-lg {
  padding: var(--spacing-4) var(--spacing-8);
  font-size: var(--font-size-lg);
  min-height: 52px;
  min-width: 160px;
}

.btn-icon {
  padding: var(--spacing-3);
  min-width: 44px;
  aspect-ratio: 1;
}

.loading-spinner {
  width: 16px;
  height: 16px;
  border: 2px solid transparent;
  border-top: 2px solid currentColor;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .company-modal {
    margin: var(--spacing-2);
    max-height: 95vh;
  }
  
  .company-modal-header {
    padding: var(--spacing-4);
    flex-direction: column;
    gap: var(--spacing-4);
    align-items: stretch;
  }
  
  .modal-title-section {
    justify-content: center;
    text-align: center;
  }
  
  .modal-close-btn {
    align-self: flex-end;
  }
  
  .company-modal-form {
    padding: var(--spacing-4);
  }
  
  .form-sections {
    gap: var(--spacing-6);
  }
  
  .form-section {
    padding: var(--spacing-4);
  }
  
  .form-grid {
    grid-template-columns: 1fr;
    gap: var(--spacing-3);
  }
  
  .company-modal-actions {
    padding: var(--spacing-4);
    flex-direction: column;
    gap: var(--spacing-3);
  }
  
  .btn {
    width: 100%;
    min-width: auto;
  }
}

@media (max-width: 480px) {
  .company-modal-overlay {
    padding: var(--spacing-2);
  }
  
  .company-modal {
    margin: 0;
    border-radius: var(--radius-lg);
  }
  
  .modal-icon {
    width: 50px;
    height: 50px;
    font-size: var(--font-size-2xl);
  }
  
  .modal-title-section h2 {
    font-size: var(--font-size-xl);
  }
  
  .modal-title-section p {
    font-size: var(--font-size-sm);
  }
}

/* Footer Styles */
.footer-container {
  background: linear-gradient(135deg, var(--gray-900) 0%, var(--gray-800) 100%);
  color: var(--white);
  padding: 0;
  margin-top: var(--spacing-12);
  border-top: 1px solid var(--gray-700);
}

.footer-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: var(--spacing-8) var(--spacing-6);
}

.footer-main {
  margin-bottom: var(--spacing-6);
}

.footer-section {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-4);
}

.footer-logo {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
  margin-bottom: var(--spacing-3);
}

.footer-logo-icon {
  font-size: var(--font-size-2xl);
  color: var(--primary-color);
}

.footer-logo-text {
  font-size: var(--font-size-lg);
  font-weight: 700;
  background: linear-gradient(135deg, var(--primary-color), var(--info-color));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.footer-description {
  color: var(--gray-300);
  line-height: 1.6;
  font-size: var(--font-size-sm);
  max-width: 300px;
}

.footer-social {
  display: flex;
  gap: var(--spacing-3);
  margin-top: var(--spacing-2);
}

.social-button {
  background: var(--gray-700) !important;
  color: var(--gray-300) !important;
  border-radius: var(--radius-full) !important;
  width: 40px;
  height: 40px;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  transition: all var(--transition-normal);
}

.social-button:hover {
  background: var(--primary-color) !important;
  color: var(--white) !important;
  transform: translateY(-2px);
}

.footer-section-title {
  color: var(--white);
  font-size: var(--font-size-base);
  font-weight: 600;
  margin-bottom: var(--spacing-3);
  display: block;
}

.footer-links {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-3);
}

.footer-link {
  color: var(--gray-300) !important;
  font-size: var(--font-size-sm);
  transition: all var(--transition-fast);
  text-decoration: none !important;
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

.footer-link:hover {
  color: var(--primary-color) !important;
  transform: translateX(2px);
}

.footer-divider {
  background: var(--gray-700) !important;
  margin: var(--spacing-6) 0 !important;
}

.footer-bottom {
  padding: var(--spacing-4) 0;
}

.footer-bottom-content {
  flex-direction: column;
  gap: var(--spacing-4);
  text-align: center;
}

.footer-bottom-content .ant-row {
  width: 100%;
}

.footer-copyright {
  color: var(--gray-400);
  font-size: var(--font-size-sm);
}

.footer-bottom-link {
  color: var(--gray-400) !important;
  font-size: var(--font-size-xs);
  transition: all var(--transition-fast);
  text-decoration: none !important;
}

.footer-bottom-link:hover {
  color: var(--primary-color) !important;
}

/* Responsive Footer Styles */
@media (max-width: 768px) {
  .footer-content {
    padding: var(--spacing-6) var(--spacing-4);
  }
  
  .footer-main {
    margin-bottom: var(--spacing-4);
  }
  
  .footer-section {
    gap: var(--spacing-3);
  }
  
  .footer-description {
    font-size: var(--font-size-xs);
    max-width: 100%;
  }
  
  .footer-social {
    gap: var(--spacing-2);
  }
  
  .social-button {
    width: 36px;
    height: 36px;
  }
  
  .footer-link {
    font-size: var(--font-size-xs);
  }
  
  .footer-bottom-content {
    gap: var(--spacing-3);
  }
  
  .footer-bottom-link {
    font-size: var(--font-size-xs);
  }
}

@media (min-width: 768px) {
  .footer-bottom-content {
    flex-direction: row;
  }
  
  .footer-bottom-content .ant-row {
    width: auto;
  }
}
